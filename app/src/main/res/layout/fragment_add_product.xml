<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddShoeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etNameAddShoeFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="77dp"
            android:layout_marginBottom="33dp"
            android:ems="10"
            android:hint="name..."
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/etSizeAddShoeFragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etSizeAddShoeFragment"
            android:layout_width="204dp"
            android:layout_height="0dp"
            android:layout_marginBottom="37dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="size"
            android:inputType="textMultiLine"
            app:layout_constraintBottom_toTopOf="@+id/etModelAddShoeFragment"
            app:layout_constraintStart_toStartOf="@+id/etNameAddShoeFragment"
            app:layout_constraintTop_toBottomOf="@+id/etNameAddShoeFragment" />

        <EditText
            android:id="@+id/etModelAddShoeFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:ems="10"
            android:hint="model"
            android:inputType="text|textPostalAddress"
            app:layout_constraintBottom_toTopOf="@+id/etPhoneAddShoeFragment"
            app:layout_constraintStart_toStartOf="@+id/etSizeAddShoeFragment"
            app:layout_constraintTop_toBottomOf="@+id/etSizeAddShoeFragment" />

        <EditText
            android:id="@+id/etPhoneAddShoeFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="68dp"
            android:ems="10"
            android:hint="phone..."
            android:inputType="phone"
            app:layout_constraintBottom_toTopOf="@+id/btnAddAddShoeFragment"
            app:layout_constraintStart_toStartOf="@+id/etModelAddShoeFragment"
            app:layout_constraintTop_toBottomOf="@+id/etModelAddShoeFragment" />

        <Button
            android:id="@+id/btnAddAddShoeFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="249dp"
            android:text="Add"
            app:iconTint="#0C31FF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPhoneAddShoeFragment" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>